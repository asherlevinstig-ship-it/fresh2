{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Colyseus Server (ESM Build)",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Ensure build output location */
    "rootDir": "src",
    "outDir": "build",

    /* Decorators (repeat to be explicit for CI/build) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "useDefineForClassFields": false,

    /* Production-friendly emit */
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
